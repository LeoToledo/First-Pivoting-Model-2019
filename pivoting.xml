<mujoco model="arm_claw (v1.31)">
	<compiler 	inertiafromgeom="true"
				angle="radian"/>
			
	<size 	nuser_jnt="1"
			nuser_geom="1"/>

	<option	timestep="0.001"
			gravity="0 0 -9.8"
			viscosity="0"
			iterations="20"/>
	
	<asset>
		<material name="MatGnd" specular=".3" shininess=".3" reflectance="0.3" rgba=".5 .55 .5 1"/>
	</asset>
	
	<default>
		<joint limited="true" damping="1" stiffness="0" armature=".1" user="0"/>
		<geom solref="0.008 1" solimp="0.95 0.95 0.01" margin="0.001" user="0"/>
		<motor ctrllimited="true" ctrlrange="-1 1"/>
		<position ctrllimited="true"/>
		
		<default class='0'>
			<geom friction="1 0.005 0.001" rgba=".75 .6 .5 1" contype="1" conaffinity="0"/>
		</default>

		<default class='1'>
			<geom friction="1 0.005 0.001" rgba=".7 .6 .55 1" contype="1" conaffinity="0"/>
		</default>
		
		<default class='arm'>
			<joint damping="5"/>
		</default>
	</default>

	<worldbody>
		<light directional="true" cutoff="40" exponent="10" diffuse=".4 .4 .4" specular=".7 .7 .7" pos="0 0 1.5" dir="0 0 -1"/>
		<geom name="tableTop" material="MatGnd" type="plane" pos="0.15 0 0" size="0.4 0.6 0.5" rgba=".6 .6 .5 1" contype="1" conaffinity="1"/>
	                                                                
		<!--  ================= ARM MASTER ================= /-->
		<body name="upperarm" pos="0 0 0.6">
			<geom class="0" type="cylinder" fromto="0 0 0 0 0 -0.345" size="0.05"/>
			<joint class='arm' name="s_rotation" type="hinge" pos="0 0 0" axis="0 0 1" range="-1.0471976 1.0471976" user="003"/>

			<!--  ================= ARM ================= /-->
			<body name="forearm" pos="0.05 0 -0.390">
				<geom class="0" type="box"  size="0.1 .07 .045"/>
				
				<!--  ================= Gripper Master ================= /-->
				<body name="gripperMaster" pos="0.225 0 0.045">
					
					<!--  ================= Gripper1 ================= /-->
					<body name="gripper1" pos="-0.065 0.0 -0.04">
						<geom class="0" type="box" size="0.06 0.035 0.004"  rgba="0.4 0.6 0.5 0.9"/>
						<joint class='arm' name="gripper" type="slide" pos="0 0 0" axis="0 0 1" range="-0.6 0.01" user="003"/> 
					</body>
					<!--  ================= gripper2 ================= /-->
					<body name="gripper2" pos="-0.065 0.0 -0.06">
						<geom class="0" type="box" size="0.06 0.035 0.004" rgba="0.5 0.6 0.8 1" contype="1" conaffinity="1"/>
					</body>

				</body>

			</body>
			
		</body>


		
		<!--  ================= OBJECT ================= / -->
		<body name="object" pos="0.268 0 0.205">
			<geom class="0" type="box" size="0.055 .013 .006" rgba="0.2 0.2 0.7 1" contype="1" conaffinity="1"/>
			<joint name="fr" type="free" limited='false' damping="0" armature="0" user="010"/>	

		</body>  

		
	
	</worldbody>
	
	<actuator>
		
		<!--  ================= O range de rotação é de mais ou menos 60° ================= / -->
		<position joint='s_rotation' 	name='As_rotation' 	kp="70" ctrlrange='--1.0471976 1.0471976'/>
		<position joint='gripper' 	name='Gripper' 	kp="60" ctrlrange='-0.6 0.01'/> 			
	</actuator>

</mujoco>
